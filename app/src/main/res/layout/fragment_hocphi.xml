<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <RelativeLayout
        android:id="@+id/rl_tool_bar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorMBlue"
        android:outlineProvider="bounds">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thông tin học phí"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="20sp"/>

    </RelativeLayout>
    <TextView
        android:id="@+id/txtTongSoTien"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tổng số tiền "
        android:background="@drawable/border_edittext"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:layout_margin="10dp"
        android:textColor="@color/colorprint"
        android:layout_below="@id/rl_tool_bar_top"/>

    <ListView
        android:id="@+id/lvMonHoc"
        android:layout_below="@id/txtTongSoTien"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </ListView>
</RelativeLayout>