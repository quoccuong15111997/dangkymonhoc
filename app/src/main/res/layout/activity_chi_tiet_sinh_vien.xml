<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ChiTietSinhVienActivity">
    <RelativeLayout
        android:id="@+id/rl_tool_bar_top"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBottomNav"
        android:outlineProvider="bounds">

        <ImageView
            android:id="@+id/iv_backSinhVien"
            android:layout_width="@dimen/w50"
            android:layout_height="@dimen/w50"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:padding="@dimen/mt10"
            android:src="@mipmap/ic_action_arrow_left" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Thông tin sinh viên"
            android:textColor="@color/text_white"
            android:textStyle="bold"
            android:visibility="visible"
            android:textSize="@dimen/sp18"/>
    </RelativeLayout>

    <agency.tango.android.avatarview.views.AvatarView
        android:layout_width="120dp"
        android:layout_height="80dp"
        app:av_border_color="@android:color/white"
        android:layout_marginTop="@dimen/w5"
        app:av_border_width="4dp"
        app:av_text_size_percentage="35"
        android:layout_gravity="center"
        android:id="@+id/avatar_view_example"/>

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:text="Nguyễn Quốc Cường"
        android:textColor="@color/colorBlack"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/llPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/w5"
            android:src="@drawable/ic_phone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:id="@+id/txtPhone"
            android:textSize="@dimen/pd20"
            android:layout_height="wrap_content"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/w5"
            android:text="Số điện thoại"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w10"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgMaSv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/w5"
            android:src="@drawable/ic_ma"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:id="@+id/txtMaSV"
            android:textSize="@dimen/pd20"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/w5"
            android:text="Mã sinh viên"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/llDiaChi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w10"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/imgSoTC"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/w5"
            android:src="@drawable/ic_sotc"/>
        <TextView
            android:id="@+id/txtSoTC"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/pd20"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/w5"
            android:text="Số tín chỉ"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/w5"
            android:src="@drawable/ic_money"/>
        <TextView
            android:id="@+id/txtHocPhi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/pd20"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/w5"
            android:text="Học phí"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/w10"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/w5"
            android:src="@drawable/ic_date"/>
        <TextView
            android:id="@+id/txtDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="@dimen/pd20"
            android:textColor="@color/colorBlack"
            android:layout_margin="@dimen/w5"
            android:text="Ngày đóng"/>
    </LinearLayout>
</LinearLayout>