<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@drawable/border_edittext_chon"
    android:padding="10dp"
    android:layout_marginTop="5dp"
    android:layout_height="wrap_content">
<TextView
    android:id="@+id/txtTenMonHoc"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Tên môn học"
    android:textColor="@color/colorBlack"
    android:textSize="20dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Số tín chỉ: "
            android:layout_weight="1"
            android:textColor="@color/colorprint"
           android:layout_marginLeft="15dp"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/txtSoTC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên môn học"
            android:textColor="@color/colorprint"
            android:layout_weight="1"
            android:textSize="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:id="@+id/chkMonHoc"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã môn học: "
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:textColor="@color/colorGreen"
            android:textSize="16dp"/>
        <TextView
            android:id="@+id/txtMaMH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tên môn học"
            android:textColor="@color/colorGreen"
            android:layout_weight="1"
            android:textSize="16dp"/>
        <CheckBox
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Đã đăng ký"
        android:textAlignment="textEnd"

        android:textColor="@color/colorRed"
        android:textStyle="italic" />
</LinearLayout>